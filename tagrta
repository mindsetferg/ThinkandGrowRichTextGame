# Game Intro
def burning_desire():
    money_made = input("How much money would you like to make? Think about the\n"
    "total of all the things you can possibly want.:> ")

    services_rendered = input("What would you give or what service\n"
    "would you render to achieve them?:> ")

    target_date = input("What date do you want to achieve this by?:> ")

    desire_output = f'''
    So your decision has been made.
    You want to make {money_made} by {target_date}
    and to make sure all of this happens,
    you will give (of yourself) or render the valuable service of {services_rendered}
    '''

    return money_made, services_rendered, target_date, desire_output

def faith_formula():
    print("After you have repeated this phrase 5 times,")
    input("press ENTER to continue:> ")

seps = "*****************************\n"

print("""You find yourself sitting in the middle of a room.
You can move freely but you feel comfortable and decide to stay still.
There is a spotlight shining down on you.
You can tell there are other's in the room but you cannot
see them through the darkness.""")
print("What do you do?")
print("1. Yell out for 'help'.")
print("2. Ask 'Who are you?'")
print("3. Say 'What is going on?'")

